generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Restored Models with User Relationships ---

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  contacts  User[] @relation("UserContacts")
  contactOf User[] @relation("UserContacts")

  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")

  @@map("users")
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  contactId Int
  userId    Int
  edited    Boolean @default(false)

  user    User @relation("SentMessages", fields: [userId], references: [id])
  contact User @relation("ReceivedMessages", fields: [contactId], references: [id])

  @@map("messages")
}